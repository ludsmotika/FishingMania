@model IEnumerable<FishingMania.Data.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-4 offset-4 bg-primary text-white text-center rounded-pill d-flex my-5">
    <p class="h2 mx-auto my-4 text-center">Products</p>
</div>

<div class="d-flex flex-row bg-primary rounded-pill my-5">

    <form method="get" id="searchForm" asp-area="Administration" asp-controller="Products" asp-action="Index" autocomplete="off" class="my-5 col-md-6 d-flex flex-row">
        <input class="form-control col-md-5 mx-2" type="text" id="searchQuery" name="searchQuery" placeholder="Search product by name">
        <button type="submit" class="btn bg-white text-primary col-md-4 mx-2">Search Product</button>
    </form>

    <p class="text-center my-5 col-md-6">
        <a asp-action="Create" class="btn bg-white text-primary">Create New Product</a>
    </p>

</div>

<table class="table table-hover table-stripped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td class="text-center">
                    <a class="btn bg-primary text-white mt-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn bg-primary text-white mt-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (!item.IsDeleted)
                    {
                        <a class="btn bg-primary text-white mt-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>