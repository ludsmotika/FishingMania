@using FishingMania.Web.ViewModels.Catch;
@model CatchFormViewModel

<div class="mt-5 bg-primary rounded-pill offset-4 col-md-4" style="padding:1px;">
    <p class="text-center text-white my-4 h2">Adding New Catch</p>
</div>

<form id="customForm" method="post" enctype="multipart/form-data" class="col-md-6 offset-3 text-center my-5 text-white bg-primary rounded-5">
    <div class="form-group h3 my-3 mt-5">
        <label class="mt-4" asp-for="@Model.Description"></label>
        <input asp-for="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="form-group h3 my-3">
        <label asp-for="@Model.Weight"></label>
        <input asp-for="@Model.Weight" class="form-control" />
        <span asp-validation-for="@Model.Weight" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label class="h3" asp-for="@Model.ImageFile"></label>
        <input id="inputFieldForImage"asp-for="@Model.ImageFile" class="form-control-file" accept=".jpg,.jpeg,.png" onchange="previewImage(event); validateForm();"/>
        <span id="imageValidation" asp-validation-for="@Model.ImageFile" class="text-danger"></span>

        <div class="form-group">
            <img id="imagePreview" src="#" alt="Preview Image" style="display: none; max-width: 100%;" />
        </div>
    </div>
    <div class="form-group h3 my-3">
        <label asp-for="@Model.FishingSpotId" class="form-label-add-edit"></label>
        <select asp-for="@Model.FishingSpotId" id="parentSelect" name="fishingSpotId" class="form-control" aria-required="true">
            <option disabled selected>- Select fishing spot -</option>
            @foreach (var type in Model.FishingSpots)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.FishingSpotId" class="text-danger"></span>
    </div>
    <div class="form-group h3 my-3">
        <label asp-for="@Model.FishSpeciesId" class="form-label-add-edit"></label>
        <select asp-for="@Model.FishSpeciesId" id="childSelect" name="fishSpeciesId" class="form-control" aria-required="true">
            <option disabled selected>- Select fish species -</option>
        </select>
        <span asp-validation-for="@Model.FishSpeciesId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn bg-white text-primary col-md-4 my-4">Post</button>
</form>

@section Scripts {
    <script src="~/js/showPhotoWhenUploaded.js"></script>
    <script src="~/js/cascadeSelectFishSpecies.js"></script>
}