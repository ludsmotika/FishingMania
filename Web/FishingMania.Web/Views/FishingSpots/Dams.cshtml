@using FishingMania.Web.ViewModels.FishingSpot;
@model List<FishingSpotViewModel>
@{
    this.ViewData["Title"] = "Dams Page";
}

<h1 class="text-primary text-center m-5"><strong>Dams to fish on!</strong></h1>

<div class="d-flex">
    @foreach (var spot in Model)
    {
        <div class="place-card col-md-4">
            <div class="place-image">
                <img src="@spot.Image.URL" alt="Place Image">
                <div class="place-details">
                    <h3 class="place-name">@spot.Name</h3>
                    <a class="btn btn-secondary text-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .place-card {
        margin-bottom: 20px;
    }

    .place-image {
        position: relative;
        display: inline-block;
    }

        .place-image img {
            width: 100%;
            height: auto;
            display: block;
        }

    .place-details {
        position: absolute;
        display: flex;
        flex-direction: row;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.7);
        color: #fff;
    }

    .place-name {
        margin-right: auto;
    }

    .btn-more-details {
        position: absolute;
        display: inline-block;
        padding: 8px 12px;
        background-color: blue;
        color: #000;
        text-decoration: none;
        margin-top: 10px;
    }
</style>