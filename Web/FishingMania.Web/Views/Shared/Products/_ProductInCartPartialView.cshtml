@using FishingMania.Web.ViewModels.Product;
@model ProductInShoppingCartViewModel

<div id="@Model.ShoppingCartProductId" class="col-md-10 offset-1 bg-primary text-white rounded-5 d-flex flex-row my-4">
    <div id="carousel-@Model.Id" class="carousel col-md-3 slide m-4 rounded-5" data-bs-ride="carousel">
        <div class="carousel-inner text-center">
            @for (var i = 0; i < Model.Images.Count(); i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")" style="height:150px;">
                    <img src="@Model.Images[i].URL" class="d-block h-100 w-100 rounded-5" style="object-fit:cover;" alt="@Model.Name">
                </div>
            }
        </div>
        <a class="carousel-control-prev m-1" href="#carousel-@Model.Id" role="button" data-slide="prev">
            <span><i class="fa-solid fa-angle-left fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next m-1" href="#carousel-@Model.Id" role="button" data-slide="next">
            <span><i class="fa-solid fa-angle-right fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <p class="h3 mt-4">Product: @Model.Name</p>
        <p class="h3">Price: @Math.Round(Model.Price,2)$</p>
        <p class="h3">Amount: @Model.Amount</p>
        <p class="h3">Total Price: <span class="totalPriceForProduct">@(Model.Amount * Math.Round(Model.Price, 2))</span>$</p>
    </div>
    <div class="my-auto ml-auto">
        <button onclick="removeFromCart(event, @Model.Id, '@Model.ShoppingCartProductId')" class="btn bg-white text-primary rounded-5 my-auto mr-0">Remove From Cart</button>
    </div>
</div>