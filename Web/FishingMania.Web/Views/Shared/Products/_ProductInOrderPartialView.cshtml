@model OrderProduct

<div class="col-md-12 bg-dark bg-opacity-50 text-white rounded-5 d-flex flex-row my-4 align-items-center">
    <div id="carousel-@Model.Id" class="carousel col-md-3 slide m-4 rounded-5" data-bs-ride="carousel">
        <div class="carousel-inner text-center">
            @for (var i = 0; i < Model.Product.Images.Count(); i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")" style="height:150px;">
                    <img src="@Model.Product.Images.ToList()[i].URL" class="d-block h-100 w-100 rounded-5" style="object-fit:cover;" alt="@Model.Product.Name">
                </div>
            }
        </div>
        <a class="carousel-control-prev m-1" href="#carousel-@Model.Id" role="button" data-slide="prev">
            <span><i class="fa-solid fa-angle-left fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next m-1" href="#carousel-@Model.Id" role="button" data-slide="next">
            <span><i class="fa-solid fa-angle-right fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <p class="h4 mt-4">Product: @Model.Product.Name</p>
        <p class="h4">Price: @Math.Round(Model.Product.Price,2)$</p>
        <p class="h4">Amount: @Model.Amount</p>
        <p class="h4">Total Price: <span class="totalPriceForProduct">@(Model.Amount * Math.Round(Model.Product.Price, 2))</span>$</p>
    </div>
</div>


