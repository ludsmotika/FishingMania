@using FishingMania.Web.ViewModels.Product;
@model ProductViewModel

<div class="card col-md-3 m-5 bg-primary-subtle bg-opacity-25 text-decoration-none text-primary font-weight-bold">
    <div id="carousel-@Model.Id" class="carousel slide my-auto mt-3" data-bs-ride="carousel">
        <div class="carousel-inner text-center">
            @for (var i = 0; i < Model.Images.Count(); i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")" style="height:300px;">
                    <img src="@Model.Images[i].URL" class="d-block h-100 w-100" style="object-fit:cover;" alt="@Model.Name">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carousel-@Model.Id" role="button" data-slide="prev">
            <span><i class="fa-solid fa-angle-left fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-@Model.Id" role="button" data-slide="next">
            <span><i class="fa-solid fa-angle-right fa-lg text-primary" aria-hidden="true"></i></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="card-body my-auto">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: $@Math.Round(Model.Price,2)</p>
    </div>
    <div>
        <a class="btn bg-primary text-white col-md-4 mx-4 mb-3" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">Details</a>
        <button onclick="handleClick(event, @Model.Id)" class="btn bg-primary text-white col-md-4 mx-4 mb-3 @(Model.AmountInStock == 0 ? "disabled" : "")">@(Model.AmountInStock == 0 ? "Sold out" : "Buy")</button>
    </div>
</div>
